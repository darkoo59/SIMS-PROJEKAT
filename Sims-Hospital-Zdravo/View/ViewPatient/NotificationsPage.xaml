<Page x:Class="Sims_Hospital_Zdravo.View.ViewPatient.NotificationsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Sims_Hospital_Zdravo.View.ViewPatient"
      mc:Ignorable="d" 
      d:DesignHeight="168" d:DesignWidth="150"
      Title="NotificationsPage">

    <Grid>
        <ListView Background="#FF60BBC9" HorizontalAlignment="Left" Height="168" VerticalAlignment="Top" Width="150" FontSize="12">
            <Label Background="#FF3183CB" Height="60" Width="135" BorderBrush="Black" BorderThickness="1">
                <Label.Content>
                    <TextBlock>
                        Your appointment has <LineBreak></LineBreak>been rescheduled.
                    </TextBlock>
                </Label.Content>
            </Label>
            <Label Background="#FF3183CB" Height="60" Width="135" BorderBrush="Black" BorderThickness="1">
                <Label.Content>
                    <TextBlock>
                        You need to take <LineBreak></LineBreak>Panklav(10:30).
                    </TextBlock>
                </Label.Content>
            </Label>
        </ListView>

    </Grid>
</Page>
