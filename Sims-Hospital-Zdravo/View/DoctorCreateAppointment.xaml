<Window x:Class="Sims_Hospital_Zdravo.View.DoctorCreateAppointment"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Sims_Hospital_Zdravo.View"
             mc:Ignorable="d" 
             Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="1" Height="30" VerticalAlignment="Top" Margin="0, 20, 120, 0" HorizontalAlignment="Right" RenderTransformOrigin="-0.264,-0.443" Width="67">Date :</Label>
        <Label Grid.Row="1" Height="30" Width="150" VerticalAlignment="Top" Margin="80,62,0,0" HorizontalAlignment="Left" Grid.RowSpan="2">Time:</Label>
        <Label Grid.Row="2" Height="30" Width="150" VerticalAlignment="Top" Margin="80,55,0,0" HorizontalAlignment="Left" Grid.RowSpan="2">Patient:</Label>
        <TextBox x:Name="PatientTxt" Grid.Row="3" Grid.Column="0" Width="150" Height="30" HorizontalAlignment="Right" ></TextBox>
        <Label Grid.Row="3" Height="30" Width="150" VerticalAlignment="Top" Margin="80,55,0,0" HorizontalAlignment="Left" Grid.RowSpan="2">Room:</Label>
        <TextBox x:Name="RoomTxt" Grid.Row="4" Grid.Column="0" Width="150" Height="30" HorizontalAlignment="Right"></TextBox>

        <Button Grid.Row="3" Grid.Column="1" Height="36" VerticalAlignment="Top" Margin="58,10,73,0" Click="Button_Click" >Save</Button>
        <ComboBox Margin="117,19,266,12" Grid.Row="2" x:Name="cbTime" Grid.ColumnSpan="2">
            <ComboBoxItem>8:00</ComboBoxItem>
            <ComboBoxItem>8:30</ComboBoxItem>
            <ComboBoxItem>9:00</ComboBoxItem>
            <ComboBoxItem>9:30</ComboBoxItem>
            <ComboBoxItem>10:00</ComboBoxItem>
            <ComboBoxItem>10:30</ComboBoxItem>
            <ComboBoxItem>11:00</ComboBoxItem>
        </ComboBox>
        <DatePicker x:Name="DatePick" HorizontalAlignment="Left" Height="29" Margin="117,35,0,0" Grid.Row="1" VerticalAlignment="Top" Width="150" Grid.ColumnSpan="2" Grid.RowSpan="2"/>

    </Grid>
</Window>
