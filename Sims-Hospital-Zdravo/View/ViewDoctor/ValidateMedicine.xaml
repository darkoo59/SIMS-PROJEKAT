<Window x:Class="Sims_Hospital_Zdravo.View.ViewDoctor.ValidateMedicine"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sims_Hospital_Zdravo.View.ViewDoctor"
        mc:Ignorable="d"
        Title="ValidateMedicine" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel>
            <Label Content="Name:"></Label>
            <TextBox Name="MedicineNameTxt"></TextBox>
        </StackPanel>
        <StackPanel Grid.Row="1">
            <Label Content="Strength:"></Label>
            <TextBox Name="StrenghtTxt" Height="16"  Width="162">
                
                   
            </TextBox>
        </StackPanel>
        <StackPanel Margin="0,108,0,108" Grid.RowSpan="3" Grid.Row="1">
            <Label Content="Ingredients:"></Label>
            <TextBox Name="IngredientsTxt"></TextBox>
        </StackPanel>
        <StackPanel Grid.Column="1" Margin="0,0,0,108" Grid.RowSpan="2">
            <Label Content="Description:"></Label>
            <TextBox x:Name="UsingForTxt"/>
        </StackPanel>
        <StackPanel Grid.Column="2" Margin="0,-1,0,108" Grid.RowSpan="2">
            <Label Content="Allergens:"></Label>
            <TextBox Name="AllegensTxt"/>
        </StackPanel>
        <StackPanel Grid.Column="1" Grid.ColumnSpan="2" Margin="5,0,0,0" Grid.Row="1">
            <Label Content="Medicine shouldnt be approved because:"></Label>
            <TextBox Name="ReasonForRejectinMedicineTxt"></TextBox>
        </StackPanel>
        <Button Margin="26,28,26,28" Grid.Column="1" Grid.Row="2" Content="Approve" Name="ValidateMedicineBtn" Click="ValidateMedicineBtn_Click"></Button>
        <Button Margin="26,28,26,28" Grid.Column="2" Grid.Row="2" Content="Reject" Name="RejectMedcineBtn" Click="RejectMedicineBtn_Click"></Button>
    </Grid>
</Window>
