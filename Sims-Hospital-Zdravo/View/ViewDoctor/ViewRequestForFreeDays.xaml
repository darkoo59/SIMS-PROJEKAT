<Page x:Class="Sims_Hospital_Zdravo.View.ViewDoctor.ViewRequestForFreeDays"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Sims_Hospital_Zdravo.View.ViewDoctor"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ViewRequestForFreeDays">
    <Page.Resources>
        <ResourceDictionary Source="DoctorStyleDictionary.xaml"/>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="3*"/>

        </Grid.RowDefinitions>
        <StackPanel>
            <Label Content="Leaves" FontSize="25" Margin="10 0 10 10"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Margin="20 0 10 0">


            <Button Content="New Request" Width="130" Height="40" HorizontalAlignment="Right" Margin=" 0 0 0 15"  Click="CreateNewRequestClick"/>

            <ListBox Grid.Row="1" Height="300" Name="DataGridRequestForFreeDays" Style="{DynamicResource FreeDaysListBox}" ScrollViewer.VerticalScrollBarVisibility="Visible" >

        </ListBox>
        </StackPanel>
    </Grid>
</Page>
