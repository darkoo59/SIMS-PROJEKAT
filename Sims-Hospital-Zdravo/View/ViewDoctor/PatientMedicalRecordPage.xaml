<Page x:Class="Sims_Hospital_Zdravo.View.ViewDoctor.PatientMedicalRecordPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Sims_Hospital_Zdravo.View.ViewDoctor"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PatientMedicalRecordPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>

        </Grid.RowDefinitions>
        <StackPanel>
            <Label Content="Patient name:"></Label>
            <TextBox  Name="PatienNameTxt"></TextBox>
        </StackPanel>
        <StackPanel Margin="0,102,0,10" Grid.RowSpan="2">
            <Label Content="Patient surname:"></Label>
            <TextBox  Name="PatientSurnameTxt"></TextBox>
        </StackPanel>
        <StackPanel Margin="0,108,0,6" Grid.RowSpan="2" Grid.Row="1">
            <Label Content="Birth date:"></Label>
            <TextBox  Name="BirthDateTxt"></TextBox>
        </StackPanel>
        <StackPanel>
            <Label Content="Address:"></Label>
            <TextBox  Name="AdressTxt"></TextBox>
        </StackPanel>
        <StackPanel Grid.Column="1" Margin="0,106,0,6" Grid.RowSpan="2" Grid.Row="1">
            <Label Content="Gender"/>
            <TextBox Name="Gendertxt"/>

        </StackPanel>
        <StackPanel Grid.Column="1" Grid.ColumnSpan="2" Margin="10,108,190,5" Grid.RowSpan="2">
            <Label Content="Phone number"/>
            <TextBox Name="numberTxt"/>

        </StackPanel>
        <StackPanel Grid.Column="2" Margin="0,103,0,10" Grid.RowSpan="2">
            <Label Content="Marital status"/>
            <TextBox Name="maritalStatusTxt"/>

        </StackPanel>
        <StackPanel Grid.Column="1" Grid.ColumnSpan="2" Margin="10,108,190,5" Grid.RowSpan="2">
            <Label Content="Identification bumber"/>
            <TextBox Name="UIDTxt"/>

        </StackPanel>

    </Grid>
</Page>
