<Page x:Class="Sims_Hospital_Zdravo.View.ViewDoctor.SearchPatient"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sims_Hospital_Zdravo.View.ViewDoctor"
        mc:Ignorable="d"
        Title="SearchPatient" Height="768" Width="1024">
    <Page.Resources>
        <ResourceDictionary Source="DoctorStyleDictionary.xaml"></ResourceDictionary>
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <Frame  Margin="211,0,0,0"/>
        <DataGrid Name="MedicalRecordDataGrid" Grid.Row="1" Margin="10,10,10,10" ColumnWidth="*"/>
        <StackPanel Grid.Row="0"  Orientation="Horizontal">
            <TextBox TextWrapping="Wrap" Name="SearchTxt" Width="120" Height="40" Margin="0,0,25,0" />
            <Button Content="Search" Margin="0,0,25,0" Width="120" Height="40" />
            <Button Content="Patient Medical Record" Click="PatientMedicalRecordClick" Width="120" Height="40"  Margin="0,0,25,0"/>
            <Button Content="Prescription" Width="120" Height="40" Click="PrescriptionClick"/>
        </StackPanel>
    </Grid>
</Page>
