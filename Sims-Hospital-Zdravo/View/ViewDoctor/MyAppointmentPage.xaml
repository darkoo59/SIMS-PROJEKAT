<Page x:Class="Sims_Hospital_Zdravo.View.ViewDoctor.MyAppointmentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Sims_Hospital_Zdravo.View.ViewDoctor"
      mc:Ignorable="d" 
      Height="700" Width="700"
      Title="MyAppointmentPage">
    <Page.Resources>
        <ResourceDictionary Source="DoctorStyleDictionary.xaml"></ResourceDictionary>
    </Page.Resources>
    <Grid>



        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>




        <DataGrid HorizontalAlignment="Center" Name="DoctorAppointments" Width="680"  SelectionMode="Single" Grid.Row="1" Margin="0,10,0,10" />
        <StackPanel Grid.Row="0" HorizontalAlignment="Left">
            <Label Content="Choose date:"   HorizontalAlignment="Left"  Height="32"/>
            <DatePicker x:Name="AppointmentShow" SelectedDateChanged="AppointmentShow_SelectedDateChanged" HorizontalAlignment="Left" Height="60" Width="224"  />
        </StackPanel>

    </Grid>
</Page>
